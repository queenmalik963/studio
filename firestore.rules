
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own profile.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to create their own profile document.
      allow create: if request.auth != null;
    }

    // Any authenticated user can read, create, update, or delete rooms.
    match /rooms/{roomId} {
    	allow read, write: if request.auth != null;
    }
    
    // Any authenticated user can read or write messages within any room.
    match /rooms/{roomId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Any authenticated user can read and write to conversations.
    match /conversations/{conversationId} {
    	allow read, write: if request.auth != null;
    }

    // Any authenticated user can read or write messages within any conversation.
    match /conversations/{conversationId}/messages/{messageId} {
    	allow read, write: if request.auth != null;
    }
  }
}
