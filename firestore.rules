
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default rule: Allow read and write access to the entire database 
    // for any user that is authenticated.
    // This is not secure for production but is suitable for development.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // More specific rules for production would go here. For example:
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
    //
    // match /rooms/{roomId} {
    //   allow read: if request.auth != null;
    //   // Only the owner can change room details
    //   allow write: if request.auth != null && resource.data.ownerId == request.auth.uid;
    // }
  }
}
