rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own data, but anyone can read a user's public profile.
    match /users/{userId} {
      allow read;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read rooms and conversations.
    match /rooms/{roomId} {
      allow read;
      allow create, update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || request.auth.uid in resource.data.admins);
      
      // Messages can be read and written by any authenticated user.
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    match /conversations/{conversationId} {
        allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
        
        match /messages/{messageId} {
            allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        }
    }
  }
}
